<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/lLightBlue"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Başlık :"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/mainColor"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/mainColor"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/title_advert"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Başlangıç Tarihi:"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/mainColor"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/mainColor"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_marginStart="30dp"
                    android:id="@+id/start_date_advert"
                    android:hint="Tarih seçmek için tıkla ..."
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Bitiş Tarihi:"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/mainColor"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/mainColor"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_marginStart="30dp"
                    android:id="@+id/end_date_advert"
                    android:hint="Tarih seçmek için tıkla ..."
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Yer:"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/mainColor"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/mainColor"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/place_advert"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Açıklama:"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/mainColor"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/mainColor"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/details_advert"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:hint="tema seç..."
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/mainColor"
                    android:id="@+id/poster"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Seç"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/login_button_first"
                    android:textColor="@color/white"
                    android:id="@+id/choose_image"
                    android:layout_marginEnd="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:text="iptal"
                    android:background="@drawable/login_button_first"
                    android:textColor="@color/white"
                    android:id="@+id/cancel_advert"
                    />
                <Button
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:text="Görüntüle"
                    android:background="@drawable/login_button_first"
                    android:textColor="@color/white"
                    android:id="@+id/create_advert"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>